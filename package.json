{
  "name": "react-scaffold",
  "version": "1.0.0",
  "description": "1. npm init 2. npm install --save-dev @babel/preset-react",
  "main": "index.js",
  "scripts": {
    "start": "parcel index.html",
    "lint": "eslint \"src/\" --cache --fix --format table",
    "format": "prettier --write \"src/*.+(js|css)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jianghaifeng/react-scaffold.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jianghaifeng/react-scaffold/issues"
  },
  "homepage": "https://github.com/jianghaifeng/react-scaffold#readme",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "parcel-bundler": "^1.12.4",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
